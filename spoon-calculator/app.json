{
  "expo": {
    "name": "My Spoon Calculator",
    "slug": "spoon-calculator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/spoon-images/spoon_icon.png",
    "scheme": "spooncalculator",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/spoon-images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.tcrundall.spooncalculator"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/spoon-images/spoon_icon_splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fe11ba05-4b9a-4846-ad84-31b237adde37"
      }
    }
  }
}
